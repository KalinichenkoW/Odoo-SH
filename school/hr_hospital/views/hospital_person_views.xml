<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="hr_hospital_person_tree" model="ir.ui.view">
            <field name="name">hr.hospital.person.tree ()</field>
            <field name="model">hr.hospital.person</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"></field>
                    <field name="phone"></field>
                    <field name="mail"></field>
                    <field name="image_128" widget="image"></field>
                    <field name="gender"></field>
                </tree>
            </field>
        </record>

        <record id="hr_hospital_person_form" model="ir.ui.view">
            <field name="name">hr.hospital.person.form ()</field>
            <field name="model">hr.hospital.person</field>
            <field name="arch" type="xml">
                <form>
                    <header/>
                    <sheet>
                        <group>
                            <field name="name"></field>
                            <field name="phone"></field>
                            <field name="mail"></field>
                            <field name="gender"></field>
                            <field name="image_1920" widget="image"></field>                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_hospital_person_act_window" model="ir.actions.act_window">
            <field name="name">Persons</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.person</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_hospital_person_menu"
                  action="hr_hospital_person_act_window"
                  parent="hr_hospital_catalog_menu"
                  name="List Persons" sequence="200"/>

</odoo>
