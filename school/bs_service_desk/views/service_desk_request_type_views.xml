<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bs_service_desk_request_type_search" model="ir.ui.view">
        <field name="name">bs.service.desk.request.type.search</field>
        <field name="model">bs.service.desk.request.type</field>
        <field name="arch" type="xml">
            <search string="Stage Search">
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <separator />
                <field name="name" filter_domain="[('name', 'ilike', self)]" />
            </search>
        </field>
    </record>
    <record id="bs_service_desk_request_type_tree" model="ir.ui.view">
        <field name="name">bs.service.desk.request.type.tree ()</field>
        <field name="model">bs.service.desk.request.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" />
                <field name="sequence" widget="handle" />                    
                <field name="name" />
                <field name="active" />                    
                <field name="description" />
            </tree>
        </field>
    </record>
    <record id="bs_service_desk_request_type_form" model="ir.ui.view">
        <field name="name">bs.service.desk.request.type.form ()</field>
        <field name="model">bs.service.desk.request.type</field>
        <field name="arch" type="xml">
            <form>
                <header/>
                <sheet>
                    <group>
                        <field name="create_uid" />
                        <field name="name" />
                        <field name="active" />
                        <field name="sequence" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="bs_service_desk_request_type_act_window" model="ir.actions.act_window">
        <field name="name">Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bs.service.desk.request.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="bs_service_desk_request_type_menu"
            action="bs_service_desk_request_type_act_window"
            parent="bs_service_desk_settings_menu"
            name="List Type" sequence="200"/>

</odoo>
