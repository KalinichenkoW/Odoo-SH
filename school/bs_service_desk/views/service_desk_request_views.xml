<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="bs_service_desk_request_tree" model="ir.ui.view">
            <field name="name">bs.service.desk.request.tree ()</field>
            <field name="model">bs.service.desk.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id" optional="hide"/>
                    <field name="number" optional="show"/>
                    <field name="name" optional="show"/>
                    <field name="stage_id" optional="show"/>

                    <field name="create_date" optional="hide"/>
                    <field name="create_uid" optional="hide"/>
                    <field name="write_date" optional="hide"/>

                    <field name="deadline" optional="show"/>

                    <field name="responsible_manager" />
                    <field name="type_request" />                    
                    <field name="active" />
                    <field name="company_id" />
                    <field name="description" />
                    <field name="attachment_file" />
                    <!-- <field name="product_ids" widget="many2many_tags" options="{'no_open': True, 'display_name': 'barcode,name'}" /> -->
                    
                </tree>
            </field>
        </record>

        <record id="bs_service_desk_request_form" model="ir.ui.view">
            <field name="name">bs.service.desk.request.form ()</field>
            <field name="model">bs.service.desk.request</field>
            <field name="arch" type="xml">
                <form>
                    <header/>
                    <sheet>                        
                        <group>
                            <field name="number" />
                            <field name="name" />
                            <field name="stage_id" />                            

                            <field name="create_date" />
                            <field name="create_uid" />
                            <field name="write_date" />

                            <field name="deadline" />
                            
                            <field name="responsible_manager" />
                            <field name="type_request" />
                            <field name="active" />
                            <field name="company_id" />
                            <field name="address_id" />
                            <field name="description" />                            
                            <field name="attachment_file" />
                            <field name="product_ids" widget="many2many_tags" options="{'no_open': True, 'display_name': 'name,barcode,qty_available'}" />

                        </group>
                        <!-- <notebook>
                            
                            <page string="Chatter" class="oe_chatter">
                                <field name="message_follower_ids" widget="mail_followers"/>
                                <field name="message_ids" widget="mail_thread"/>
                            </page>
                        </notebook> -->
                      </sheet>
                </form>
            </field>
        </record>

        <record id="bs_service_desk_request_kanban_view" model="ir.ui.view">
            <field name="name">author.of.book.kanban</field>
            <field name="model">bs.service.desk.request</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" group_create="stage_id">
                <!-- <kanban class="o_kanban_mobile" default_group_by="stage_id"> -->
                            
                            
                    <field name="name"/>
                    <field name="number" />
                    <field name="stage_id" />
                    <templates>
                        <!-- <progressbar field="state" sum_field="qty" colors='{"draft": "success", "posted": "danger"}'/> -->
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content oe_kanban_global_click">                                
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">                                
                                        <field name="name"/>
                                        <field name="number"/>
                                        <field name="stage_id" />
                                    </div>
                                   </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="bs_service_desk_request_act_window" model="ir.actions.act_window">
            <field name="name">Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bs.service.desk.request</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <menuitem id="bs_service_desk_request"
                  action="bs_service_desk_request_act_window"
                  parent="bs_service_desk_request_menu"
                  name="List Request" sequence="200"/>

</odoo>
