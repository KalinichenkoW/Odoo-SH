<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bs_service_desk_request_tree" model="ir.ui.view">
        <field name="name">bs.service.desk.request.tree ()</field>
        <field name="model">bs.service.desk.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" optional="hide"/>
                <field name="number" optional="show"/>
                <field name="name" optional="show"/>
                <field name="stage_id" optional="show"/>
                <field name="priority_id" optional="show"/>

                <field name="create_date" optional="hide"/>
                <field name="create_uid" optional="hide"/>
                <field name="write_date" optional="hide"/>

                <field name="deadline" optional="show"/>

                <field name="request_type" optional="show"/>                  
                <field name="company_id" optional="show"/>
                <field name="address_id" optional="show"/>
                <field name="description" optional="show"/>
                <field name="attachment_file" optional="show"/>
                
                
            </tree>
        </field>
    </record>

    <record id="bs_service_desk_request_form" model="ir.ui.view">
        <field name="name">bs.service.desk.request.form ()</field>
        <field name="model">bs.service.desk.request</field>
        <field name="arch" type="xml">
            <form>
                    <header>
                    <field name="stage_id" widget="statusbar"  options="{'clickable': '1'}"/>
                </header>
                <sheet>    
                    <group>
                        <div class="oe_title">
                            <h1 class="oe_title">
                                <field name="number"/>
                            </h1>                                
                        </div>
                        
                        <newline/>
                        
                        <group>
                            <field name="name" />
                            <field name="request_type" />
                            <field name="company_id" />
                            <field name="address_id" />
                            <field name="deadline" />
                        </group>
                        <group>    

                            <field name="active" invisible="1"/>
                            <field name="create_date" />
                            <field name="create_uid" />
                            <field name="write_date" />
                            <field name="write_uid" />                            
                            <field name="attachment_file" />

                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" widget="html" />
                        </page>
                        <page string="Other Information" name="other_info">
                            <group>
                                <field name="product_ids" /> 
                            </group>
                        </page>
                    </notebook>                        
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                    </sheet>
            </form>
        </field>
    </record>
    
    <record id="bs_service_desk_request_quick_form" model="ir.ui.view">
        <field name="name">bs.service.desk.request.quick.form()</field>
        <field name="model">bs.service.desk.request</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="request_type" />
                    <field name="company_id" />
                    <field name="address_id" />
                    <field name="priority_id" widget="radio" options="{'horizontal': true}"/>
                    <field name="deadline" />
                    <field name="description" widget="html" />                        
                </group>
            </form>
        </field>
    </record>


    <record id="bs_service_desk_request_kanban_view" model="ir.ui.view">
        <field name="name">bs.service.desk.request.kanban</field>
        <field name="model">bs.service.desk.request</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" 
                default_group_by="stage_id"
                quick_create_view="bs_service_desk.bs_service_desk_request_quick_form"                
                group_create="False">

                <field name="name"/>
                <field name="number" />
                <field name="stage_id" />

                <templates>
                    <progressbar field="stage_id" sum_field="qty" colors='{"draft": "success", "posted": "danger"}'/>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_content oe_kanban_global_click">                                
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">    
                                    <h5><field name="number"/></h5>
                                </div>                                    
                                <div>
                                    <field name="priority_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="name"/>
                                <small class="o_kanban_record_subtitle text-muted">
                                    <field name="company_id" />
                                </small>
                                <field name="address_id"/>
                                <field name="description"/>
                            </div>
                            <div class="o_kanban_record_bottom">                               
                                <div class="oe_kanban_bottom_left">
                                    <field name="create_uid"/>
                                </div>
                                <div class="oe_kanban_bottom_right">                                        
                                    <field name="deadline" />                                        
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="bs_service_desk_request_act_window" model="ir.actions.act_window">
        <field name="name">Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bs.service.desk.request</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="bs_service_desk_request"
                action="bs_service_desk_request_act_window"
                parent="bs_service_desk_request_menu"
                name="List Request" sequence="200"/>

</odoo>
